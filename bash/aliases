alias ls='ls -G'
alias ll='ls -la'
alias psg='ps aux | grep '

for aliases in $(find $DOTFILES -name aliases | egrep -v "bash/aliases$")
do
  source $aliases
done

platform() 
{
  platform='unknown'
  case $OSTYPE in
    darwin*) platform='osx' ;;
    linux*) platform='linux' ;;
  esac

  echo $platform
}

