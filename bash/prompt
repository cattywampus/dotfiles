prompt_left() {
  echo -e "-- \\u on \\h in \\w \n\\\t"
}

prompt_right() {
  echo -e "$(__git_ps1 " (%s)")"
}

prompt() {
  left=$(prompt_left)
  right=$(prompt_right)

  if [ -z "$COLUMNS" ]; then
    width=$(stty size | cut -d' ' -f2)
  else
    width=$COLUMNS
  fi
  gap_length=$(( $width-${#right} ))
  gap=$(printf "%.0s-" $(seq 1 $gap_length))

  PS1=$(printf "%*s\r%s \$ " $width "$gap$right" "$left")
}

PROMPT_COMMAND=prompt

